    <!-- Main Script -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/js/main.js?v=1.1" type="text/javascript"></script>
    <script src="/js/custom-chart.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>



    <script>
        // Get today's date
        async function deleteOffer(couponId) {
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then(async (result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: "Deleted!",
                        text: "Your file has been deleted.",
                        icon: "success",
                        timer: 2000,

                    });
                }
                const deleteOffer = await axios.post(`/admin/deleteCoupon?id=${couponId}`)
                setTimeout(() => {
                    if (deleteOffer) {
                        window.location.reload()
                    }
                }, 2000)
            });

        }
        function dateVal() {

            const selectedDate = document.getElementById('validity')
            const newDate = new Date(selectedDate.value)
            const today = new Date()
            if (newDate < today) {
                Swal.fire({
                    title: "oops!",
                    text: "Select a valid date.",
                    icon: "warning",
                    timer: 1000,

                });
                return false
            }

            return true

        }
    </script>
