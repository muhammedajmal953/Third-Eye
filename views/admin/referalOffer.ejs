        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">

            </div>
            <div class="col-nav">
                <ul class="nav">
                    <li class="nav-item ">
                        <a href="/admin/logout" class="btn btn-success text-dark">Logout</a>
                    </li>
                </ul>
            </div>
        </header>
        <h1>Referal Offer</h1>

        <table class="table table-hover mt-3">
            <thead class="table-dark ">
                <tr>
                    <th>Sl.no</th>
                    <th>Refered offer</th>
                    <th>Referal offer</th>
                    <th>validity</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i=0; i < referal.length; i++) {%>

                    <tr>
                        <td>
                            <%= 1 %>
                        </td>
                        <td>
                            <%= referal[i].referedOffer %>
                        </td>
                        <td>
                            <%= referal[i].referalOffer %>
                        </td>
                        <td>
                            <%= referal[i].Validity.toDateString() %>
                        </td>
                        <td class="d-flex">




                            <form action="/admin/deleteReferal?id=<%=referal[i]._id%>" class="m-1" method="post">
                                <input type="submit" class="btn btn-warning " value="Delete">
                            </form>

                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
        <% if (referal.length<1) { %>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#addOfferModal">Add
                Offer</button>
            <% } %>

                <div class="modal fade" id="addOfferModal" tabindex="-1" role="dialog"
                    aria-labelledby="addOfferModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="addOfferModalLabel">Add Offer</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form id="offerForm" method="post" action="/admin/saveReferal">
                                    <div class="form-group">
                                        <label for="referralOffer">Referral Offer:</label>
                                        <input type="number" class="form-control" id="referralOffer"
                                            name="referralOffer" min="1" required>
                                        <div class="invalid-feedback">Referral Offer must be a positive number.</div>
                                    </div>
                                    <div class="form-group">
                                        <label for="referredOffer">Referred Offer:</label>
                                        <input type="number" class="form-control" id="referredOffer"
                                            name="referredOffer" min="1" required>
                                        <div class="invalid-feedback">Referred Offer must be a positive number.</div>
                                    </div>
                                    <div class="form-group">
                                        <label for="validity">Validity:</label>
                                        <input type="date" class="form-control" id="validity" name="validity" required>
                                        <div class="invalid-feedback">Please provide a validity date.</div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Save Offer</button>
                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>


    </main>
    <script src="/js/vendors/jquery-3.6.0.min.js"></script>
