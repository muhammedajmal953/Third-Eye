        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Dashboard</h2>
                    <p>Whole data about business here</p>
                </div>
                <div>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#salesReportModal">
                        <i class="text-muted material-icons md-post_add"></i>
                        Sales Report
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-primary-light"><i
                                    class="text-primary material-icons md-monetization_on"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Revenue</h6>
                                <span>$<%=revenue%></span>
                                <span class="text-sm"> Shipping not included </span>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-success-light"><i
                                    class="text-success material-icons md-local_shipping"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Orders</h6>
                                <span>
                                    <%=totalOrder%>
                                </span>
                                <span class="text-sm"> Excluding orders in transit </span>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-warning-light"><i
                                    class="text-warning material-icons md-qr_code"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Products</h6>
                                <span>
                                    <%= productsCount %>
                                </span>
                                <span class="text-sm"> In 3 Categories </span>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-info-light"><i
                                    class="text-info material-icons md-person"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Users</h6>
                                <span>
                                    <%=users.length%>
                                </span>
                                <span class="text-sm">Total users. </span>
                            </div>
                        </article>
                    </div>
                </div>
            </div>

            <!-- Modal -->
            <div class="modal fade" id="salesReportModal" tabindex="-1" role="dialog"
                aria-labelledby="salesReportModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="salesReportModalLabel">Select Report Type</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="btn-group" role="group" aria-label="Report Type">
                                <a href="/admin/weeklyReport"><button type="button"
                                        class="btn btn-secondary">Weekly</button></a>
                                <a href="/admin/dailyReport"><button type="button"
                                        class="btn btn-secondary">Daily</button></a>
                                <a href="/admin/monthlyReport"><button type="button"
                                        class="btn btn-secondary">Monthly</button></a>
                                <a href="/admin/yearlyReport"><button type="button"
                                        class="btn btn-secondary">Yearly</button></a>
                            </div>
                            <br><br>
                            <form action="/admin/customReport" method="post">
                                <label for="customDate">Custom Date:</label>
                                <input type="date" id="customDate" name="customDate" class="form-control">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Generate Report</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <select class="select form-select-lg lg-3 mb-3" id="chartData" onchange="changeFilter()"
                aria-label=".form-select-lg example">
                <option value="weekly">weekly</option>
                <option value="monthly">monthly</option>
                <option value="yearly">yearly</option>
            </select>
            <canvas id="chart" width="200" height="100"></canvas>


            <div>
                <h2 class="content-title card-title mt-5 "><b>Top Selling Products</b> </h2>
                <p></p>
            </div>

            <div class="card-body mt-4">
