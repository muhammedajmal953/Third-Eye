    <script>
        let myChart
        function changeFilter() {
            let filter = document.getElementById('chartData').value
            let labels
            let values

            if (filter === 'yearly') {
                const yearString = '<%- JSON.stringify(yearData) %>';
                const yearData = JSON.parse(yearString)

                labels = Object.keys(yearData);
                values = Object.values(yearData)

            } else if (filter === 'monthly') {
                const monthlyString = '<%- JSON.stringify(monthlyDataLastYear) %>';
                const monthlyDataLastYear = JSON.parse(monthlyString)

                labels = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
                values = Object.values(monthlyDataLastYear)
            } else if (filter === 'weekly') {

                const weeklyString = '<%- JSON.stringify(weeklyData) %>';
                const weeklyData = JSON.parse(weeklyString)

                console.log('weekly:', weeklyData);

                labels = ['sun', 'mon', 'tue', 'wed', 'thu', 'fri', 'sat']
                values = weeklyData
            }



            if (myChart) {
                myChart.destroy();
            }
            chartShow(labels, values)
        }




        function chartShow(labels, values) {

            var ctx = document.getElementById('chart').getContext('2d');
            myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Sales',
                        data: values,
                        borderWidth: 1
                    },]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        }

        changeFilter()

    </script>


