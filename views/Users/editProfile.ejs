  <script>
    function validateEditUser() {
      let username = document.getElementById('username').value.trim();
      let phone = document.getElementById('phone').value.trim();
      let email = document.getElementById('email').value.trim();

      let nameRegex = /^[a-zA-Z]{3,20}$/;
      let emailRegex = /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,})+$/;
      let phoneRegex = /^(?!0)\d{10}$/;

      if (!nameRegex.test(username) && username === '') {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: 'Name must filled and atleast 3 letters'
        });

        return false;
      }
      if (!emailRegex.test(email)) {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: 'Email must be filled with a valid form'
        });
        return false;
      }
      if (!phoneRegex.test(phone)) {
        Swal.fire({
          icon: "error",
          title: "Oops...",
          text: 'Phone must be filled with a valid form'
        });
        return false;
      }
      return true;
    }

    function validateCheckPass() {
      let oldPassword = document.getElementById('oldPassword').value
      let newPassword1 = document.getElementById('newPassword1').value
      let newPassword2 = document.getElementById('newPassword2').value

      let passwordRegex = /^[^\s]{8,}$/

      if (!passwordRegex.test(oldPassword)) {
        alert('password must be atleast 8 characters')
        return false
      }
      if (!passwordRegex.test(newPassword1)) {
        alert('new password must be atleast 8 characters')
        return false
      }
      if (newPassword1 !== newPassword2) {
        alert('password must be same')
        return false
      }
        return true
    }  
