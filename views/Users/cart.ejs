<script>
  // Function to update the quantity input value and trigger change event
  async function incrimentTotal(indexId, price, max, i) {

    try {


      if ((Number(document.querySelectorAll('.quantity-input')[i].value) + 1) <= max) {
        const response = await axios.post(`/user/totalIncrement?indexId=${indexId}&price=${price}`)

        let totalprice = response.data
        let upadateTotal = document.getElementById('total').innerHTML = totalprice
        let updateCartTotal = document.getElementById('bagTotal').innerHTML = totalprice
      }
      changeQuantity(document.querySelectorAll('.increase-btn')[i], 1);
    } catch (error) {

    }
  }


  async function decrimentTotal(indexId, price, i) {
    try {
      if ((Number(document.querySelectorAll('.quantity-input')[i].value) - 1) > 0) {
        const response = await axios.post(`/user/totalDecrement?indexId=${indexId}&price=${price}`);
        let totalprice = response.data

        let upadateTotal = document.getElementById('total').innerHTML = totalprice
        let updateCartTotal = document.getElementById('bagTotal').innerHTML = totalprice
      }
      changeQuantity(document.querySelectorAll('.decrease-btn')[i], -1);
    } catch (error) {

    }
  }



  // Function to change the quantity when increase or decrease button is clicked
  function changeQuantity(button, change) {

    const input = button.parentElement.parentElement.querySelector('.quantity-input');
    let quantity = parseInt(input.value);

    // Change the quantity based on the button clicked
    quantity += change;

    // Ensure the quantity stays within the min-max range
    const min = parseInt(input.getAttribute('min'));
    const max = parseInt(input.getAttribute('max'));
    quantity = Math.min(Math.max(min, quantity), max);



    // Update the input value
    input.value = quantity;

    // Trigger change event to update quantity on the backend
    input.dispatchEvent(new Event('change'));

  }
  async function removeCart(productId, price, cartQty) {
    try {
      const response = await axios.post(`/user/removeCart?productId=${productId}&price=${price}&cartQty=${cartQty}`);
      Swal.fire({
        icon: 'success',
        title: 'Success',
        text: response.data,
      }).then((result) => {
        if (result.isConfirmed) {
          // Reload the page
          window.location.reload();
        }
      });


    } catch (error) {
      console.error('Error removing item from cart:', error);
      // Handle error appropriately (e.g., show an error message to the user)
    }
  }

