<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link rel="stylesheet" href="/css/user.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  <title>SignUp-ThirdEye - eCommerce</title>
</head>

<body>
  <div class="login-container">
    <form class="login-form" method="POST" action="/user/newPassword" onsubmit="return validatePassword()">

      <h1> New Password</h1>
      <p>Please Enter New Password</p>

      <div class="input-group">
        <input type="password" id="password" name="password" placeholder="New Password" />
        <p id="passwordVal" style="color: red"></p>
      </div>
      <div class="input-group">
        <input type="password" id="confirmPassword" name="confirmpassword" placeholder="Confirm Password" />
        <p id="confirmPassVal" style="color: red"></p>
      </div>

      <button type="submit">Save Password</button>
    </form>
  </div>

</body>

<script src="/js/formValidations.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function validatePassword() {
    let password = document.getElementById("password").value
    let confirmPassword = document.getElementById("confirmPassword").value
    let passwordRegex = /(?=.*[a-zA-Z])(?=.*\d)(?=.*[^a-zA-Z0-9\s]).{8,}/;


    if (!passwordRegex.test(password)) {
      Swal.fire({
        title: "Oops!?",
        text: "Password must be at least 8 characters at least have one special character,one number and a special character",
        icon: "error"
      });
      return false
    }

    if (confirmPassword !== password) {
      Swal.fire({
        title: "Oops!?",
        text: "two passwords must be same",
        icon: "error"
      });

      return false

    }
    return true
  }
</script>

</html>