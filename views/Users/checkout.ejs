    <script>
        let addressVal
        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function () {
                if (this.checked) {
                    const labelId = this.getAttribute('data-label-id');
                    const label = document.getElementById(labelId);
                    addressVal = label.textContent.trim(); // Get the text content of the label
                }
            });
        });

        async function proceedOrder(cart, total, totalDiscount) {
            var selectedOption = document.querySelector('input[name="paymentOption"]:checked');
            var paymentMethod = selectedOption.value;
            var coupon = document.getElementById('couponCode').value

            if (!addressVal && !paymentMethod) {
                Swal.fire({
                    icon: 'error',
                    title: 'Validation Error!',
                    text: 'Please select both address and payment option.',
                    showConfirmButton: false,
                    timer: 2000
                });
                return;
            }

            if (total > 1000 && paymentMethod === 'Cod') {
                Swal.fire({
                    icon: 'error',
                    title: 'COD not allowed over Rs-1000!',
                    text: 'Please select another payment option.',
                    showConfirmButton: false,
                    timer: 2000
                });
                return;
            }
            let address = addressVal

            const response = await axios.post(`/user/proceedOrder`, {
                cart,
                address,
                paymentMethod,
                coupon,
                total,
                totalDiscount
            })

            if (response.data === 'your order throug Cash on delivery') {
                Swal.fire({
                    icon: 'success',
                    title: 'Order Placed!',
                    text: response.data,
                    showConfirmButton: false,
                    timer: 2000
                });
                setTimeout(function () {
                    window.location.href = '/user/productList/1';
                }, 2000);
            } else if (response.data.redirectUrl) {
                window.location.href = response.data.redirectUrl
            } else if (response.data === 'the product is out of stock') {
                Swal.fire({
                    icon: 'warning',
                    title: 'Sorry!',
                    text: 'the product is out of stock',
                    showConfirmButton: false,
                    timer: 2000
                });
            }
            else {
                Swal.fire({
                    icon: 'warning',
                    title: 'Order cannott plassed!',
                    text: 'please try again.',
                    showConfirmButton: false,
                    timer: 2000
                });
            }
        }




        async function applyCoupon(totalPrice, shipping, totalDiscount) {
            const couponCode = document.getElementById('couponCode').value


            if (totalPrice < 75) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Sorry!',
                    text: 'Order must be over $75 to Apply coupon!',
                    showConfirmButton: false,
                    timer: 2000
                });
                return;
            }
            const response = await axios.post(`/user/applyCoupon`, { totalPrice, couponCode, totalDiscount });

            if (response.data === 'No coupon found') {
                Swal.fire({
                    icon: 'warning',
                    title: 'Sorry!',
                    text: 'No coupon found in that code',
                    showConfirmButton: false,
                    timer: 2000
                });
                return;
            }
            Swal.fire({
                icon: 'success',
                title: 'Coupon appied!',
                text: 'coupon Applied',
                showConfirmButton: false,
                timer: 2000
            });
            let total = response.data + Number(shipping)
            document.getElementById('applyCoupon').style.visibility = 'hidden'
            document.getElementById('removeCoupon').style.visibility = 'visible'
            document.getElementById('discountAmount').innerText = total



        }


        async function removeCoupon(totalPrice, shipping, totalDiscount) {
            try {
                const response = await axios.post('/user/removeCoupon', { totalPrice, totalDiscount })

                if (response.data) {

                    Swal.fire({
                        icon: 'success',
                        title: 'Coupon removed!',
                        text: 'coupon removed',
                        showConfirmButton: false,
                        timer: 2000
                    });
                    let total = Number(response.data) + Number(shipping)
                    document.getElementById('applyCoupon').style.visibility = 'visible'
                    document.getElementById('removeCoupon').style.visibility = 'hidden'
                    document.getElementById('discountAmount').innerText = total
                    let coupon = document.getElementById('couponCode')
                    coupon.value = ''
                }
            } catch (error) {
                console.error('Error removing coupon:', error);
            }
        }

        function validateAddress() {
            const house = document.getElementById('floatingAddress').value.trim()
            const state = document.getElementById('floatingState').value.trim()
            const village = document.getElementById('floatingLocalityTown').value.trim()
            const city = document.getElementById('floatingCity').value.trim()
            const pincode = document.getElementById('floatingPinCode').value

            let pincodeRegex = /^(?!0)\d{6}$/;


            if (house === '' || state === '' || village === '' || city === '' || pincode === '') {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "all fields must be filled"
                });
                return false
            }
            if (!pincodeRegex.test(pincode)) {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "enter a valid pincode"
                });
                return false
            }

            return true
        }
